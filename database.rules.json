{
  "rules": {
    ".read": "root.child('members/all/' + auth.uid + '/year').val().matches(/^2019|lifetime$/)",
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "members": {
      "$year": {
        "$uid": {
          ".read": "$uid === auth.uid",
          ".write": false
        }
      }
    },
    "races": {
      ".read": "auth != null",
      ".write": false
    },
    "attendance": {
      ".read": "root.child('members/all/' + auth.uid + '/year').val().matches(/^2019|lifetime$/)",
      ".write": false,
      "$year": {
        "$eid": {
          "$uid": {
            ".read": "$uid === auth.uid",
            ".write": "$uid === auth.uid"
          }
        }
      }
    },
    "benefits": {
      ".read": "root.child('members/all/' + auth.uid + '/year').val().matches(/^2019|lifetime$/)",
      ".write": false
    },
    "reimbursements": {
      "$year": {
        "$uid": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        }
      }
    }
  }
}

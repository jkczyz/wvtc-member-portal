{
  "rules": {
    ".read": "root.child('board/2017/' + auth.uid).exists()",
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "members": {
      "$year": {
        "$uid": {
          ".read": "$uid === auth.uid",
          ".write": false
        }
      }
    },
    "races": {
      ".read": "auth != null",
      ".write": false
    },
    "benefits": {
      ".read": "root.child('members/all/' + auth.uid + '/year').val().matches(/^2017|lifetime$/)",
      ".write": false
    },
    "reimbursements": {
      "$year": {
        "$uid": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        }
      }
    }
  }
}
